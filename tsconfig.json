{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2019",
    "module": "esnext",
    "lib": [
      "es2019",
      "dom",
      "dom.iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/components/*": [
        "./src/components/*"
      ],
      "@/layouts/*": [
        "./src/layouts/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/img/*": [
        "./src/img/*"
      ],
      "@/navs/*": [
        "./src/navs/*"
      ]
    },
    "types": [
      "@molehill-ui/babel-plugin/types/css-prop"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/layouts/SidebarLayout.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
